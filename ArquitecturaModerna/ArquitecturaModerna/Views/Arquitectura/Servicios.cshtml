@model List<Beneficia.BusArquitectura.Buss.Servicio>
<!DOCTYPE html>
<html lang="en">
<body>
    <header class="hero-banner project-bg">
        <a class="navbar-brand" href="/Arquitectura/Index">
            <img src="~/img/logo.png" alt="">
        </a>
        <div class="container">
            <h2 class="section-intro__subtitle">Servicios</h2>
            <div class="btn-group breadcrumb">
                <a href="/Arquitectura/Index" class="btn">Home</a>
                <span class="btn btn--rightBorder">Services</span>
            </div>
        </div>
    </header>

    <section class="service section-margin mb-5 pb-5">
        <div class="container">
            <div class="section-intro">
                <h4 class="section-intro__title">Nuestros Servicios</h4>
                <h2 class="section-intro__subtitle bottom-border">Nuestra oferta de servicios</h2>
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-lg-5">
                    </div>
                    <div class="col-lg-4">
                        <label title="AgregarServicio" class=" btn btn-outline-default" data-toggle="modal" data-target="#exampleModal"><span class="ti-layout-tab glyphicon-th-large p-3" sm> Nuevo Servicio </span></label>
                    </div>
                </div>
            </div>
            <br />
        

        <!-- Modal agregar proyecto -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">.:Agregar Servicio:.</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h1>hola modal servicio</h1>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="ti-check btn-primary p-2"> Guardar</button>
                        <button type="button" class="ti-close btn-danger p-2" data-dismiss="modal"> Close</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (Beneficia.BusArquitectura.Buss.Servicio item in Model)
            {
                <div class="col-sm-6 col-lg-4">
                    <div class="media service__single">
                        <span class="service__singleIcon"><i class="ti-package"></i></span>
                        <div class="media-body">
                            <h3>@item.nombre_serv</h3>
                            <p>@item.desc_serv</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        </div>
    </section>

    <section class="tips tips-bg">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7 mb-4 mb-lg-0">
                    <h2 class="section-intro__subtitle">Get to Know Project Estimate?</h2>
                    <p>There is a moment in the life of any aspiring astronomer that it is time to buy that first telescope. It’s exciting to think about setting up your own viewing station whether that is on the deck</p>
                </div>
                <div class="col-lg-5 text-center text-lg-right">
                    <a class="btn btn-dark btn--leftBorder btn--rightBorder" href="#/">Get Estimate</a>
                </div>
            </div>
        </div>
    </section>
</body>
</html>